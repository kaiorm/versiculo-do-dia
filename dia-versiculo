<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="refresh" content="86400"> <!-- Atualiza a cada 24h -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Versículo do Dia</title>
  <style>
    body {
      margin: 0;
      background-color: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
  </style>
</head>
<body>
  <script>
    // Gera a data de hoje no formato YYYYMMDD
    const hoje = new Date();
    const ano = hoje.getFullYear();
    const mes = String(hoje.getMonth() + 1).padStart(2, '0');
    const dia = String(hoje.getDate()).padStart(2, '0');
    const data = `${ano}${mes}${dia}`;

    // Cria o link da imagem do versículo do dia
    const img = document.createElement('img');
    img.src = `https://s3.amazonaws.com/static.youversionapi.com/images/base/${data}.jpg`;
    img.alt = "Versículo do dia";
    document.body.appendChild(img);
  </script>
</body>
</html>
